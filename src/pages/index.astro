  </div>
</Layout>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking on a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // WhatsApp Form Handler
  const whatsappForm = document.getElementById('whatsapp-form');
  
  whatsappForm?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Capturar datos del formulario
    const name = document.getElementById('form-name').value.trim();
    const email = document.getElementById('form-email').value.trim();
    const phone = document.getElementById('form-phone').value.trim();
    const projectType = document.getElementById('form-project').value;
    const message = document.getElementById('form-message').value.trim();
    
    // Formatear el mensaje para WhatsApp
    let whatsappMessage = `üåü *NUEVA CONSULTA DESDE EL CAT√ÅLOGO*\n\n`;
    whatsappMessage += `üë§ *Nombre:* ${name}\n`;
    whatsappMessage += `üìß *Email:* ${email}\n`;
    
    if (phone) {
      whatsappMessage += `üì± *Tel√©fono:* ${phone}\n`;
    }
    
    whatsappMessage += `üíº *Tipo de Proyecto:* ${projectType}\n\n`;
    whatsappMessage += `üìù *Mensaje:*\n${message}\n\n`;
    whatsappMessage += `---\n`;
    whatsappMessage += `_Enviado desde: ${window.location.href}_`;
    
    // N√∫mero de WhatsApp (Honduras)
    const phoneNumber = '50497840276';
    
    // Crear URL de WhatsApp
    const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`;
    
    // Abrir WhatsApp en nueva pesta√±a
    window.open(whatsappURL, '_blank');
    
    // Mostrar mensaje de confirmaci√≥n
    const button = whatsappForm.querySelector('button[type="submit"]');
    const originalText = button.innerHTML;
    button.innerHTML = '‚úÖ Redirigiendo a WhatsApp...';
    button.disabled = true;
    
    // Resetear el formulario despu√©s de 3 segundos
    setTimeout(() => {
      whatsappForm.reset();
      button.innerHTML = originalText;
      button.disabled = false;
      
      // Opcional: Mostrar alerta de confirmaci√≥n
      alert('‚úÖ Se ha abierto WhatsApp con tu mensaje.\n\nSi WhatsApp no se abri√≥ autom√°ticamente, verifica que tengas WhatsApp instalado o usa WhatsApp Web.');
    }, 3000);
  });
</script>


<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .template-item {
    animation: fadeIn 0.5s;
  }
</style>