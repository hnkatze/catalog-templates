    <!-- Templates Section -->
    <section id="templates" class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h3 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-8 sm:mb-12">
