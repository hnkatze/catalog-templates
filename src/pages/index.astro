        <!-- Templates Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="templates-grid">
          {templates.map((template) => (
            <div class="template-item">
              <TemplateCard template={template} />
